datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Account {
  id           Int          @id @default(autoincrement())
  address      String       @unique
  aaAddress    String?
  providerType String // 'twitter'
  twitterInfo  TwitterInfo?
  accessToken  String?
}

model TwitterInfo {
  id      Int    @id @default(autoincrement())
  address String @unique

  account Account? @relation(fields: [address], references: [address])

  name         String?
  email        String?
  profileImage String?
  typeOfLogin  String?

  idToken           String?
  oAuthAccessToken  String?
  oAuthIdToken      String?
  touchIDPreference String?
  appState          String?
  dappShare         String?
  verifier          String?
  verifierId        String?
  aggregateVerifier String?
}
